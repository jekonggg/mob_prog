<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DashboardActivity">
    <ListView
        android:id="@+id/expenses_list_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!-- Background split into two halves -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Top Half (Green) -->
        <View
            android:layout_width="match_parent"
            android:layout_height="-5000dp"
            android:layout_weight="1"

            android:background="@color/green_500" />

        <!-- Bottom Half (White) -->
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/light_gray"/>
    </LinearLayout>

    <!-- Scrollable Content -->
    <ScrollView
        android:id="@+id/scrollable_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom_ribbon"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <!-- Total Spending Limit Section -->
            <TextView
                android:id="@+id/date_today"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="70dp"
                android:text=""
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"/>


            <TextView
                android:id="@+id/total_limit_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$0.00"
                android:textSize="56sp"
                android:textStyle="bold"
                android:layout_marginTop="8dp"
                android:layout_gravity="center"
                android:textColor="@color/white" />

            <View
                android:layout_width="match_parent"
                android:layout_height="70dp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_gravity="center"
                card_view:cardCornerRadius="16dp"
                card_view:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <!-- Transactions Section -->
                    <TextView
                        android:id="@+id/categories_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Transactions"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginTop="16dp"
                        android:layout_marginStart="15dp" />

                    <GridLayout
                        android:id="@+id/gallery_grid"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:columnCount="2"
                        android:layout_marginTop="16dp">

                        <!-- Example Category: Food -->
                        <LinearLayout
                            android:layout_width="175dp"
                            android:layout_height="90dp"
                            android:orientation="horizontal"
                            android:padding="16dp"
                            android:layout_marginLeft="6sp"
                            android:background="@drawable/rounded_card"
                            android:elevation="4dp">

                            <LinearLayout
                                android:layout_width="56dp"
                                android:layout_height="56dp"
                                android:background="@drawable/circle_background"
                                android:gravity="center">

                                <ImageView
                                    android:id="@+id/food_icon"
                                    android:layout_width="32dp"
                                    android:layout_height="32dp"
                                    android:src="@drawable/ic_food"
                                    android:scaleType="centerCrop" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_weight="1"
                                android:layout_marginStart="16dp">

                                <TextView
                                    android:id="@+id/food_label"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Food"
                                    android:textStyle="bold"
                                    android:textSize="16sp"
                                    android:textColor="@android:color/black" />

                                <TextView
                                    android:id="@+id/food_total"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="4dp"
                                    android:text="-$45.00"
                                    android:textSize="14sp"
                                    android:textColor="@android:color/darker_gray" />
                            </LinearLayout>
                        </LinearLayout>

                        <!-- Example Category: Transportation -->
                        <LinearLayout
                            xmlns:android="http://schemas.android.com/apk/res/android"
                            android:layout_width="175dp"
                            android:layout_height="90dp"
                            android:layout_marginLeft="5dp"
                            android:orientation="horizontal"
                            android:padding="16dp"
                            android:background="@drawable/rounded_card"
                            android:layout_marginBottom="8dp"
                            android:elevation="4dp">

                            <!-- Icon with Circular Background on the Left -->
                            <LinearLayout
                                android:layout_width="56dp"
                                android:layout_height="56dp"
                                android:background="@drawable/circle_background"
                                android:gravity="center"
                                android:layout_gravity="center_vertical">

                                <ImageView
                                    android:id="@+id/transportation_icon"
                                    android:layout_width="32dp"
                                    android:layout_height="32dp"
                                    android:src="@drawable/ic_travel"
                                    android:scaleType="centerCrop" />
                            </LinearLayout>

                            <!-- Text Section on the Right -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_weight="1"
                                android:gravity="start"
                                android:layout_marginStart="16dp">

                                <!-- Category Name -->
                                <TextView
                                    android:id="@+id/transportation_label"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Travel"
                                    android:textStyle="bold"
                                    android:textSize="16sp"
                                    android:textColor="@android:color/black" />

                                <!-- Price -->
                                <TextView
                                    android:id="@+id/transportation_total"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="4dp"
                                    android:text="-$30.00"
                                    android:textSize="14sp"
                                    android:textColor="@android:color/darker_gray" />
                            </LinearLayout>
                        </LinearLayout>

                        <!-- Example Category: Entertainment -->
                        <LinearLayout
                            xmlns:android="http://schemas.android.com/apk/res/android"
                            android:layout_width="175dp"
                            android:layout_height="90dp"
                            android:layout_marginLeft="5dp"
                            android:orientation="horizontal"
                            android:padding="16dp"
                            android:background="@drawable/rounded_card"
                            android:layout_marginBottom="8dp"
                            android:elevation="4dp">

                            <!-- Icon with Circular Background on the Left -->
                            <LinearLayout
                                android:layout_width="56dp"
                                android:layout_height="56dp"
                                android:background="@drawable/circle_background"
                                android:gravity="center"
                                android:layout_gravity="center_vertical">

                                <ImageView
                                    android:id="@+id/entertainment_icon"
                                    android:layout_width="32dp"
                                    android:layout_height="32dp"
                                    android:src="@drawable/ic_entertainment"
                                    android:scaleType="centerCrop" />
                            </LinearLayout>

                            <!-- Text Section on the Right -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_weight="1"
                                android:gravity="start"
                                android:layout_marginStart="16dp">

                                <!-- Category Name -->
                                <TextView
                                    android:id="@+id/entertainment_label"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Leisure"
                                    android:textStyle="bold"
                                    android:textSize="16sp"
                                    android:textColor="@android:color/black" />

                                <!-- Price -->
                                <TextView
                                    android:id="@+id/entertainment_total"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="4dp"
                                    android:text="-$20.00"
                                    android:textSize="14sp"
                                    android:textColor="@android:color/darker_gray" />
                            </LinearLayout>
                        </LinearLayout>

                        <!-- Example Category: Online Shopping -->
                        <LinearLayout
                            xmlns:android="http://schemas.android.com/apk/res/android"
                            android:layout_width="175dp"
                            android:layout_height="90dp"
                            android:layout_marginLeft="5dp"
                            android:orientation="horizontal"
                            android:padding="16dp"
                            android:background="@drawable/rounded_card"
                            android:layout_marginBottom="8dp"
                            android:elevation="4dp">

                            <!-- Icon with Circular Background on the Left -->
                            <LinearLayout
                                android:layout_width="56dp"
                                android:layout_height="56dp"
                                android:background="@drawable/circle_background"
                                android:gravity="center"
                                android:layout_gravity="center_vertical">

                                <ImageView
                                    android:id="@+id/online_shopping_icon"
                                    android:layout_width="32dp"
                                    android:layout_height="32dp"
                                    android:src="@drawable/ic_online_shopping"
                                    android:scaleType="centerCrop" />
                            </LinearLayout>

                            <!-- Text Section on the Right -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_weight="1"
                                android:gravity="start"
                                android:layout_marginStart="16dp">

                                <!-- Category Name -->
                                <TextView
                                    android:id="@+id/online_shopping_label"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Online Shopping"
                                    android:textStyle="bold"
                                    android:textSize="16sp"
                                    android:textColor="@android:color/black" />

                                <!-- Price -->
                                <TextView
                                    android:id="@+id/online_shopping_total"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="4dp"
                                    android:text="-$25.00"
                                    android:textSize="14sp"
                                    android:textColor="@android:color/darker_gray" />
                            </LinearLayout>
                        </LinearLayout>

                        <!-- Example Category: Miscellaneous -->
                        <LinearLayout
                            xmlns:android="http://schemas.android.com/apk/res/android"
                            android:layout_width="175dp"
                            android:layout_height="90dp"
                            android:layout_marginLeft="5dp"
                            android:orientation="horizontal"
                            android:padding="16dp"
                            android:background="@drawable/rounded_card"
                            android:layout_marginBottom="8dp"
                            android:elevation="4dp">

                            <!-- Icon with Circular Background on the Left -->
                            <LinearLayout
                                android:layout_width="56dp"
                                android:layout_height="56dp"
                                android:background="@drawable/circle_background"
                                android:gravity="center"
                                android:layout_gravity="center_vertical">

                                <ImageView
                                    android:id="@+id/miscellaneous_icon"
                                    android:layout_width="32dp"
                                    android:layout_height="32dp"
                                    android:src="@drawable/ic_utilities"
                                    android:scaleType="centerCrop" />
                            </LinearLayout>

                            <!-- Text Section on the Right -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_weight="1"
                                android:gravity="start"
                                android:layout_marginStart="16dp">

                                <!-- Category Name -->
                                <TextView
                                    android:id="@+id/miscellaneous_label"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Utilities"
                                    android:textStyle="bold"
                                    android:textSize="16sp"
                                    android:textColor="@android:color/black" />

                                <!-- Price -->
                                <TextView
                                    android:id="@+id/miscellaneous_total"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="4dp"
                                    android:text="-$15.00"
                                    android:textSize="14sp"
                                    android:textColor="@android:color/darker_gray" />
                            </LinearLayout>
                        </LinearLayout>

                        <!-- Example Category: Others -->
                        <LinearLayout
                            xmlns:android="http://schemas.android.com/apk/res/android"
                            android:layout_width="175dp"
                            android:layout_height="90dp"
                            android:layout_marginLeft="5dp"
                            android:orientation="horizontal"
                            android:padding="16dp"
                            android:background="@drawable/rounded_card"
                            android:layout_marginBottom="8dp"
                            android:elevation="4dp">

                            <!-- Icon with Circular Background on the Left -->
                            <LinearLayout
                                android:layout_width="56dp"
                                android:layout_height="56dp"
                                android:background="@drawable/circle_background"
                                android:gravity="center"
                                android:layout_gravity="center_vertical">

                                <ImageView
                                    android:id="@+id/others_icon"
                                    android:layout_width="32dp"
                                    android:layout_height="32dp"
                                    android:src="@drawable/ic_others"
                                    android:scaleType="centerCrop" />
                            </LinearLayout>

                            <!-- Text Section on the Right -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_weight="1"
                                android:gravity="start"
                                android:layout_marginStart="16dp">

                                <!-- Category Name -->
                                <TextView
                                    android:id="@+id/others_label"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Others"
                                    android:textStyle="bold"
                                    android:textSize="16sp"
                                    android:textColor="@android:color/black" />

                                <!-- Price -->
                                <TextView
                                    android:id="@+id/others_total"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="4dp"
                                    android:text="-$10.00"
                                    android:textSize="14sp"
                                    android:textColor="@android:color/darker_gray" />
                            </LinearLayout>
                        </LinearLayout>

                    </GridLayout>

                    <!-- Recent Transactions Section -->
                    <TextView
                        android:id="@+id/recent_transactions_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Recent Transactions"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginTop="16dp" />

                    <HorizontalScrollView
                        android:id="@+id/recent_transactions_scroll"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <!-- Example Transaction Item -->
                            <LinearLayout
                                android:layout_width="120dp"
                                android:layout_height="150dp"
                                android:orientation="vertical"
                                android:padding="8dp"
                                android:background="@android:color/white"
                                android:elevation="4dp"
                                android:layout_marginEnd="8dp">

                                <TextView
                                    android:id="@+id/transaction_1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Transaction 1"
                                    android:textStyle="bold"
                                    android:paddingBottom="4dp" />

                                <TextView
                                    android:id="@+id/transaction_1_amount"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="$20.00" />
                            </LinearLayout>

                        </LinearLayout>
                    </HorizontalScrollView>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

    <!-- Bottom Ribbon with Floating Button (Fixed) -->
    <FrameLayout
        android:id="@+id/bottom_ribbon"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:elevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp"
            android:gravity="center">

            <!-- Home Button -->
            <ImageButton
                android:id="@+id/home_button"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:contentDescription="Home"
                android:scaleType="center"
                android:src="@drawable/ic_home" />

            <!-- Floating Action Button -->
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/floating_center_button"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:src="@drawable/ic_add"
                android:elevation="12dp"
                android:contentDescription="Add Expense"
                android:backgroundTint="@color/green_500"
                android:layout_gravity="center" />

            <!-- Transactions Button -->
            <ImageButton
                android:id="@+id/transactions_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_transactions"
                android:contentDescription="Transactions"
                android:scaleType="center" />

        </LinearLayout>
    </FrameLayout>
</RelativeLayout>
